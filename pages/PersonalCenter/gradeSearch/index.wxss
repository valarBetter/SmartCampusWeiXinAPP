/* pages/PersonalCenter/gradeSearch/index.wxss */


.container {
  display: flex; 
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center;
  height: 100vh;
}

.function-box {
  display: flex; 
  flex-direction: row;
  background-color: #ffffff; 
  width: 100%;
  border-radius: 40rpx;
  height: 9%;
  margin-top: 20rpx; 
  align-items: center; 
  justify-content: center;
}




.course-box {
  display: flex; 
  flex-direction: column;
  background-color: #ffffff; 
  width: 100%;
  border-radius: 40rpx; /* 设置圆角为 20rpx，使其边角变圆 */
  height: 40%;
  margin-top: 20rpx; 
  align-items: center;
}
.header{
  font-size: 40rpx; 
  text-align: center; 
  margin-top: 25rpx;
}
.listbox{
  display: flex; 
  flex-direction: row;
  width: 100%;
  align-items: center;
  margin-left: 20%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.projectname{
  width: 30.3%;
  text-align: left; 
  margin-top: 10rpx;
}
.gradelevel{
  width: 30.3%;
  text-align: left; 
  margin-top: 10rpx;
  color: rgba(42, 130, 228, 1);
}
.transverseLine{
  background: #cdd1c5;
  width: 83%;
  height: 1rpx;
  margin-left: 75rpx;
  margin-top: 10rpx;
  margin-right: 75rpx;
  margin-bottom: 10rpx;
}
