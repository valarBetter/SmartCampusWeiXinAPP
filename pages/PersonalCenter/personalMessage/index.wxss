/* pages/PersonalCenter/personalMessage/index.wxss */
page {
  overflow: hidden; /* 禁用页面滚动 */
}
.container {
  display: flex; /* 使用 flex 布局，使子元素可以自由排列 */
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center; /* 子元素水平居中 */
  height: 100vh; /* 高度为视口高度的 100% */
}

/* 头部的标题和问候 */
.header {
  display: flex; 
  flex-direction: column;
  margin: 10rpx 30rpx 10rpx 10rpx; /* 顶部的外边距，提供空间使内容向下移动 */
  width: 85%; 
  align-items: center;
}
.personalpicture{
  width: 150rpx;  
  height: 150rpx;  
  background: rgb(208, 226, 102);
}



.function-box {
  display: flex; 
  flex-direction: column;
  background-color: #ffffff; /* 登录框的背景颜色为白色 */
  width: 80%; /* 登录框占页面宽度的 80% */
  border-radius: 40rpx; /* 设置圆角为 20rpx，使其边角变圆 */
  height: 50%;
  margin-top: 20rpx; /* 顶部外边距，使登录框与上方元素有间距 */
  align-items: center; /* 子元素水平居中 */
}
.tabbox{
  display: flex; 
  flex-direction: column;
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.subtabbox{
  display: flex; 
  flex-direction: row; 
  height: 10%;
  margin-top: 20rpx;
  margin-bottom: 20rpx; /* 顶部外边距，使登录框与上方元素有间距 */
  align-items: center;/*子控件垂直居中*/
}
.key{
  width: 40%;
}
.value{
  width: 60%;
}


.transverseLine{
  background: #cdd1c5;
  width: 100%;
  height: 1rpx;

}

.change-button{
  padding: 30rpx; /* 按钮内边距，使文本内容离按钮边框有足够的空间 */
  background-color:rgba(57, 163, 100, 1); /* 按钮的背景颜色为绿色 */
  color: #ffffff; /* 按钮文字的颜色为白色 */
  border-radius: 15rpx; /* 按钮的圆角边框，边角半径为 10rpx */
  font-size: 28rpx; /* 按钮中文字的字体大小 */
  text-align: center; /* 按钮文字居中对齐 */
  margin-top: 50rpx;
}
.popupView{
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  overflow: hidden;
}
.popupView .close{
  flex-grow: 1;
  background-color: rgba(41, 41, 41, 0.699);
}
.popupView .content {
  background-color: #ffffff; /* 内容区背景为白色 */
  padding: 15rpx;
  flex-grow: 0.1; /* 让内容区占据尽可能多的空间 */
  border-radius: 30rpx; /* 可选的圆角 */
  z-index: 1001; /* 确保内容区在遮罩层上方 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:50rpx;
}

.input-box {
  width: 70%;
  margin-bottom: 20rpx; 
  margin-top: 20rpx; 
}
.input {
  width: 90%; 
  padding: 20rpx; 
  border-radius: 20rpx;
  border: 1rpx solid #dcdcdc;
  font-size: 28rpx; 
}
.logintext{
  margin: 5px 5px;
}