/* pages/CampusInformation/details/index.wxss */
page {
  background-attachment: scroll; /* 允许背景跟随页面滚动 */
  /* overflow: hidden; 禁用页面滚动 */
}
.container {
  display: flex; 
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center;
  height: 85vh;
}

.function-box {
  display: flex; 
  flex-direction: column;
  background-color: #ffffff; 
  width: 100%;
  height: 85vh;
  border-radius: 20rpx;
  margin-top: 20rpx; 
  align-items: center; /*垂直方向居中*/
}
.title{
  width: 90%;
  text-align: center;
  font-size: 33rpx;
  margin-top: 20rpx;
}

.posttime{
  display: flex; 
  flex-direction: row;
  width: 85%;
  margin-top: 20rpx;
  font-size: 25rpx;
  color: rgba(128, 128, 128, 1);
}
.time{
  margin-left: auto; 
}

.details{
  width: 85%;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.postman{
  display: flex; 
  flex-direction: row;
  width: 85%;
  margin-top: 20rpx;
}
.namea{
  margin-left: auto; /* 将“学生会”推到最右侧 */
}


