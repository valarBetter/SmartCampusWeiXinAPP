/* pages/CampusServices/schoolcard/index.wxss */
.text{
  text-align: left; 
  margin-left: 10%;
  margin-right: 50%;
}

.container {
  display: flex; 
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center;
  height: 100vh;
}

.function-box {
  display: flex; 
  flex-direction: row;
  background-color: #ffffff; 
  width: 100%;
  border-radius: 10rpx;
  height: 7%;
  margin-top: 20rpx; 
  align-items: center; /*垂直居中*/
  justify-items: center;
}
.list-box{
  display: flex; 
  flex-direction: column;
  background-color: #ffffff; 
  width: 100%;
  border-radius: 10rpx;
  margin-top: 20rpx; 
  align-items: center;
}
.list{
  display: flex; 
  flex-direction: column;
  width: 90%;
  height: 105rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.box1{
  display: flex; 
  flex-direction: row;
  justify-content: space-between; /* 左右两端对齐 */
}
.box2{
  display: flex; 
  flex-direction: column;
  margin-top: 10rpx;
  font-size: 33rpx;
}
.box3{
  display: flex; 
  flex-direction: row;
  color: rgba(128, 128, 128, 1);
  font-size: 22rpx;
  margin-top: 10rpx;
}
.box4{
  margin-left: 10rpx;
}
.cost{
  display: flex; 
  flex-direction: row;
  align-items: center;
  margin-left: 40rpx;
  font-size: 33rpx;
}
.transverseLine{
  background: #cdd1c5;
  width: 100%;
  height: 2rpx;
  margin-top: auto;
}
