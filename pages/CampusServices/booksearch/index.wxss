/* pages/CampusServices/booksearch/index.wxss */

.container {
  display: flex; 
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center;
  height: 100vh;
}
.header{
  display: flex; 
  flex-direction: row;
  width: 100%;
  height: 7%;
  margin-top: 20rpx; 
  align-items: center; /*垂直居中*/
  justify-content: space-between; /* 子元素左右两端对齐 */
}

.input {
  width: 50%;
  padding: 15rpx; 
  border-radius: 50rpx;
  border: 1rpx solid #dcdcdc; 
  font-size: 28rpx; 
  background-color: #ffffff;
  margin-left: 50rpx;
}
.login-button {
  background-color: rgba(57, 163, 100, 1);
  color: #ffffff;
  border-radius: 15rpx; 
  font-size: 30rpx; 
  text-align: center;
  margin-left: 30rpx;
  margin-right: 100rpx;
}



.function-box {
  display: flex; 
  flex-direction: row;
  background-color: #ffffff; 
  width: 100%;
  border-radius: 10rpx;
  height: 7%;
  margin-top: 20rpx; 
  align-items: center; /*垂直居中*/
  justify-items: center;
}