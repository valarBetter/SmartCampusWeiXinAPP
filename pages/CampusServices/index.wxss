/* pages/CampusServices/index.wxss */
page {
  overflow: hidden; /* 禁用页面滚动 */
}
.container {
  display: flex; 
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center;
  height: 100vh;
}

.card-box {
  background: -webkit-linear-gradient(left,rgba(67, 207, 124, 1) 0%, rgba(66, 204, 207, 0.24) 100%);
  background-size: cover; /* 确保背景覆盖整个页面 */
  display: flex; 
  flex-direction: column;
  width: 84%;
  border-radius: 10rpx;
  height: 21%;
  margin-top: 20rpx; 
}
.box1{
  display: flex; 
  flex-direction: row;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.personalpicture{
  width: 70rpx;  
  height: 70rpx;  
}
.informationbox{
  display: flex; 
  flex-direction: column;
  margin-left: 20rpx;
}
.informationbox1{
  display: flex; 
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 100rpx;
}
.schoolname{
  font-size: 22rpx;
}
.minbox{
  display: flex; 
  flex-direction: row; 
  align-items: center;
}
.minbox1{
  display: flex; 
  flex-direction: row; 
  align-items: center;
  margin-top: 3rpx;
}
.personalname{
  margin-top: 10rpx;
  font-size: 20rpx;
}
.studentno{
  margin-top: 10rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
}
.balance{
  font-size: 22rpx;
}
.countno{
  font-size: 40rpx;
}
.unit{
  margin-left: 10rpx;
  font-size: 20rpx;
}


.function-box {
  display: flex; 
  flex-direction: column;
  background-color: #ffffff; 
  width: 84%;
  border-radius: 20rpx; /* 设置圆角为 20rpx，使其边角变圆 */
  height: 52%;
  margin-top: 50rpx; 
  align-items: center;
}

.tabbox{
  display: flex; 
  flex-direction: column;
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.subtabbox{
  display: flex; 
  flex-direction: row; 
  height: 20%;
  margin-top: 20rpx;
  margin-bottom: 20rpx; /* 顶部外边距，使登录框与上方元素有间距 */
}
.iconpicture{
  width: 12%;
  height: 100%;
}

.subtabnamebox{
  display: flex; 
  flex-direction: column; 
  width: 80%;
  margin-left: 20rpx;
  height: 100%;
  justify-content: center; 
}
.subtabname{
  font-size: 32rpx;
}
.transverseLine{
  background: #cdd1c5;
  width: 75%;
  height: 2rpx;
  margin-left: 75rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.gotoicon{
  width: 10%;
  height: 100%;  
}
