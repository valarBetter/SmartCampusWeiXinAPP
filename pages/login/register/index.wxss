}
.card-pop {
  width: 100%;
  max-height: 460rpx;
  overflow-y: scroll;
  background: #fff;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  padding: 50rpx 28rpx 31rpx 28rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 135rpx;
  /* z-index: 999; */
}
.card-box {
  border-bottom: 2rpx solid #f2f2f2;
}
.card-box:last-child {
